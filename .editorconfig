# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[{*.mk,*[Mm]akefile*}]
indent_style = tab
indent_size = 4

[{*.{py,sh},*[Dd]ockerfile*}]
indent_style = space
indent_size = 4

[*.{json,yaml}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = off
